#include <iostream>

using namespace std;

int main()
{
    //Declare variables
    double fahrenheit;
    double celsius;
    
    //Prompt for user input
    cout << "Enter fahrenheit ";
    cin >> fahrenheit;
    
    //Calculate celsius
    celsius = (fahrenheit - 32.0) * (5.0 / 9.0);
    
    cout << "We converted your temperature from " << fahrenheit <<
            " degrees fahrenheit to celsius and it converts to: " 
            << celsius << " degrees celsius" << endl;
            
    if (fahrenheit > 80)
    {
        cout << "wow that's hot. Hope you're ready to hit the beach" << endl;
    }
    else
    {
        cout << "That sure sounds cool" << endl;
    }
    return 0;
}
